@model TravelTripProject.Models.Classes.Hotel

@{
    ViewBag.Title = "TakeHotel";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Otel Güncelle</h2>
<br />
@using (Html.BeginForm("UpdateHotel", "Admin", FormMethod.Post))
{
    @Html.LabelFor(x => x.Id)
    @Html.TextBoxFor(x => x.Id, new { @class = "form-control", @readonly = "readonly" })
    <br />
    @Html.LabelFor(x => x.Name)
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.PhotoUrl)
    @Html.TextBoxFor(x => x.PhotoUrl, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.AveragePrice)
    @Html.TextBoxFor(x => x.AveragePrice, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Description)
    @Html.TextAreaFor(x => x.Description, 12,1, new { @class = "form-control" })
    <br />
    <br />
    <button class="btn btn-success">Otel Güncelle</button>
}
