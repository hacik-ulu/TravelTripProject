@using TravelTripProject.Models.Classes
@model List<Blog>
<div class="con-bot">
    @foreach (var x in Model)
    {
        <div class="left">
            <div class="bot-left">
                <img src="@x.BlogImage" alt="" />
            </div>
            <div class="left-text">
                <h4>@x.Title</h4>
                <span class="doller">@x.Date.ToShortDateString()</span>
                <p>@x.Description.Substring(0, x.Description.Substring(0, 90).LastIndexOf(" ")) ... </p>
                <p><a href="/Blog/BlogDetail/@x.Id"><span class="read">Devamını Oku >></span></a></p>
            </div>
        </div>
    }

    @Html.Action("Partial2", "Default")

    <div class="clear"></div>
</div>

