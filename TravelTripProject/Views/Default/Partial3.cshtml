@using System.Linq

<style>
    .padding {
        padding-bottom: 50px;
    }
</style>

<div class="padding">
    <h4>En Popüler 10 Blog</h4>
    <ul class="list list-pad">
        @{
            int i = 0;
            foreach (var x in Model)
            {
                <li class="list-bg"><span>@{i++;} @i.</span><a href="/Blog/BlogDetail/@x.Id">@x.Title</a></li>
            }
        }
    </ul>
    <br />
    <a href="/Blog/Index/" class="link1">Tüm Blogları Görüntüle</a>
    <br /><br />
</div>
